<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.mgrzech.costfuel">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.AllCarsActivity"
            android:label="KALKULATOR SPALANIA"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddCarActivity"
            android:label="DODAJ SAMOCHÓD"
            android:autoRemoveFromRecents="true"
            android:parentActivityName=".activities.AllCarsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AddFuelActivity"
            android:label="DODAJ TANKOWANIE"
            android:autoRemoveFromRecents="true"
            android:parentActivityName=".activities.AllCarsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CarActivity"
            android:label="ZARZĄDZANIE"
            android:autoRemoveFromRecents="true"
            android:parentActivityName=".activities.AllCarsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AllFuelsActivity"
            android:label="WSZYSTKIE TANKOWANIA"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.EditCarActivity"
            android:label="EDYTUJ SAMOCHÓD"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AboutActivity"
            android:label="O APLIKACJI"
            android:autoRemoveFromRecents="true"
            android:parentActivityName=".activities.AllCarsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.InstructionActivity"
            android:label="INSTRUKCJA"
            android:autoRemoveFromRecents="true"
            android:parentActivityName=".activities.AllCarsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>